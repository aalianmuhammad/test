{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/admin">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('beheren') }}">Beheren</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/mededelingen">Mededelingen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    <br><br>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Voornaam</th>
            <th scope="col">Tussenvoegsel</th>
            <th scope="col">Achternaam</th>
            <th scope="col">adres</th>
            <th scope="col">Woonplaats</th>
            <th scope="col">Postcode</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.voornaam }}</td>
                <td>{{ user.tussenvoegsel }}</td>
                <td>{{ user.achternaam }}</td>
                <td>{{ user.adres }}</td>
                <td>{{ user.woonplaats }}</td>
                <td>{{ user.postcode }}</td>
                <td><a href="{{ path('beheren-edit', {id: user.id}) }}" class="btn btn-info">aanpassen</a></td>
                <td><a href="{{ path('beheren-delete', {id: user.id}) }}" class="btn btn-danger">verwijderen</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('beheren-create') }}" class="btn btn-primary">toevoegen</a>
    </div>
{% endblock %}
